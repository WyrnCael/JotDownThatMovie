<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wyrnlab.jotdownthatmovie"
    android:versionCode="4"
    android:versionName="1.02" >

    <uses-permission android:name="android.permission.INTERNET" />    
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-sdk />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        android:networkSecurityConfig="@xml/network_security_config" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
 
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
 
        <activity android:name=".AnadirPelicula"
                  android:label="@string/title_activity_saludo"
                  android:windowSoftInputMode="stateVisible" >
 
        </activity>

        <activity android:name=".About"
            android:label="@string/about" >

        </activity>
        
        <activity
            android:name=".search.ActivitySearch"
            android:label="@string/title_activity_results">
        </activity>

        <activity android:name=".mostrarPelicula.InfoMovieSearch"
                  android:label="@string/title_activity_info"
                  android:configChanges="keyboardHidden|orientation|screenSize" >

        </activity>

        <activity android:name=".mostrarPelicula.InfoMovieShared"
            android:label="@string/title_activity_info"
            android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter >
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="www.themoviedb.org" />
                <data android:scheme="https" />
                <data android:pathPattern="/movie/.*" />
            </intent-filter>
        </activity>
        
        <activity android:name=".mostrarPelicula.InfoMovieDatabase"
                  android:label="@string/title_activity_info"
                  android:configChanges="keyboardHidden|orientation|screenSize" >
 
        </activity>

        <activity android:name=".video.YoutubeApi.YoutubeActivityView"
            android:label="Trailer"
            android:configChanges="keyboardHidden|orientation|screenSize" >

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
    

</manifest>
