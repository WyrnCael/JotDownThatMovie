<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutMovieInfoDB"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewedLayot"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/blanco">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:id="@+id/Table">

            <!-- Row 1 with single column -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:gravity="center_horizontal" />

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/blanco"
                    android:orientation="horizontal"
                    android:padding="10px">

                    <ImageView
                        android:id="@+id/poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:adjustViewBounds="true"
                        android:maxHeight="138px" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/AnyoLab"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/anyo"
                            android:textColor="?attr/colorAccent"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/Anyo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/generoLab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gender"
                            android:textColor="?attr/colorAccent"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/genero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/directorLAb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/director"
                            android:textColor="?attr/colorAccent"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/director"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/valoracionLab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/valoracion"
                            android:textColor="?attr/colorAccent"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/valoracion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/blanco">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/OriginalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/OriginalTitle"
                            android:textColor="@color/verde"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/OriginalTitleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            android:textAlignment="textStart"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/OriginalLanguge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/OriginalLanguage"
                            android:textColor="@color/verde"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />

                        <TextView
                            android:id="@+id/OriginalLangugeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="TextView"
                            android:textColor="@color/negro"
                            android:textStyle="bold"
                            app:fontFamily="@font/raleway" />
                    </LinearLayout>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco">

                <TextView
                    android:id="@+id/sinopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="@string/Sinopsis"
                    android:textColor="@color/verde"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco">

                <TextView
                    android:id="@+id/toda_la_descripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/negro"
                    app:fontFamily="@font/raleway" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco">

                <TextView
                    android:id="@+id/streamingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Streaming:"
                    android:textColor="@color/verde"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanco"
                android:id="@+id/StreamingInfoRow">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/StreamingInfoRowLY"
                        android:layout_marginLeft="15dp">

                        <Button
                            android:id="@+id/BtnStreamingInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@android:color/transparent"
                            android:drawableLeft="@drawable/ic_refresh"
                            android:drawablePadding="10dp"
                            android:singleLine="true"
                            android:stateListAnimator="@null"
                            android:text="@string/SearchStreaming"
                            android:textColor="#000000"
                            android:textSize="10sp"
                            android:textStyle="italic"
                            android:theme="@style/GreenButton" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAnimals"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/viewedLayot"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="60dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="@color/blanco"
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnViewed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_viewed"
            android:drawablePadding="10dp"
            android:stateListAnimator="@null"
            android:text="@string/MarkAsViewed"
            android:textColor="#000000"
            android:theme="@style/GreenButton"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="@color/blanco"
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:weightSum="5.1">

        <Button
            android:id="@+id/BtnAtrasDB"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_arrow_back_black_24dp"
            android:stateListAnimator="@null"
            android:text="@string/backButton"
            android:textColor="#000000"
            android:theme="@style/GreenButton"
            android:layout_weight="0.8"
            android:singleLine="true" />

        <Button
            android:id="@+id/BtnDeleteDB"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_delete_forever_red"
            android:stateListAnimator="@null"
            android:text="@string/deleteButton"
            android:textColor="#CC0000"
            android:theme="@style/RedButton"
            android:layout_weight="1.1"
            android:singleLine="true" />

        <Button
            android:id="@+id/BtnSimilars"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_similar"
            android:stateListAnimator="@null"
            android:text="@string/Similars"
            android:textColor="#000000"
            android:theme="@style/GreenButton"
            android:layout_weight="1.1"
            android:singleLine="true" />

        <Button
            android:id="@+id/BtnTrailer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_trailer"
            android:stateListAnimator="@null"
            android:text="Trailer"
            android:textColor="#000000"
            android:theme="@style/GreenButton"
            android:layout_weight="1"
            android:singleLine="true" />

        <Button
            android:id="@+id/BtnRefresh"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_refresh"
            android:singleLine="true"
            android:stateListAnimator="@null"
            android:text="@string/Refresh"
            android:textColor="#000000"
            android:theme="@style/GreenButton" />

    </LinearLayout>

</RelativeLayout>