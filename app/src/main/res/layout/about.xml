<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titleAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30px"
                android:fontFamily="serif"
                android:inputType="textPersonName"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="@font/raleway" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_gravity="top|center"
            android:layout_marginTop="30px"
            android:clickable="false"
            android:src="@drawable/icono" />

            <TextView
                android:id="@+id/byWirnLabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:text="by WyrnLabs"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                app:fontFamily="@font/raleway" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40px"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/provider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10px"
                android:layout_marginTop="30px"
                android:layout_marginRight="10px"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/provider"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                app:fontFamily="@font/raleway" />

        <ImageView
            android:id="@+id/providerLogo"
            android:layout_width="227dp"
            android:layout_height="80dp"
            android:layout_marginTop="40px"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/provider" />


        <TextView
            android:id="@+id/providerUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="https://www.themoviedb.org/"
            android:layout_gravity="top|center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40px"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/followGitHub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10px"
                android:layout_marginTop="40px"
                android:layout_marginRight="10px"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:text="@string/follow_git"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                app:fontFamily="@font/raleway" />

        <ImageView
            android:id="@+id/githubLogo"
            android:layout_width="227dp"
            android:layout_height="80dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/github_logo" />

        <TextView
            android:id="@+id/gitUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="https://github.com/WyrnCael/JotDownThatMovie"
            android:layout_gravity="top|center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40px"
                android:layout_marginRight="10dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/app_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/icono" />

                <TextView
                    android:id="@+id/textViewAppIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/IconCredits"
                    android:textColor="@color/negro"
                    app:fontFamily="@font/raleway" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/video_camera" />

                <TextView
                    android:id="@+id/textViewRecordCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/IconCameraCredits"
                    android:textColor="@color/negro"
                    app:fontFamily="@font/raleway" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="0dp">

                <ImageView
                    android:id="@+id/television"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/tv" />

                <TextView
                    android:id="@+id/textViewTelevision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/IconTVCredits"
                    android:textColor="@color/negro"
                    app:fontFamily="@font/raleway" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="0dp">

                <ImageView
                    android:id="@+id/poster"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/user" />

                <TextView
                    android:id="@+id/textViewPostert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/IconUserCredits"
                    android:textColor="@color/negro"
                    app:fontFamily="@font/raleway" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="0dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/poster" />

                <TextView
                    android:id="@+id/textUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/IconUserCredits"
                    android:textColor="@color/negro"
                    app:fontFamily="@font/raleway" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>