<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <TextView
            android:id="@+id/titleAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:fontFamily="serif"
            android:inputType="textPersonName"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="250px"
            android:layout_height="250px"
            android:layout_gravity="top|center"
            android:layout_marginTop="30px"
            android:clickable="false"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/byWirnLabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="by WyrnLabs"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="40px"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30px"
            android:inputType="textPersonName"
            android:text="@string/provider"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/providerLogo"
            android:layout_width="227dp"
            android:layout_height="80dp"
            android:layout_marginTop="40px"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/provider" />

        <TextView
            android:id="@+id/providerUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="https://www.themoviedb.org/"
            android:layout_gravity="top|center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/followGitHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40px"
            android:inputType="textPersonName"
            android:text="@string/follow_git"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark" />

        <ImageView
            android:id="@+id/githubLogo"
            android:layout_width="227dp"
            android:layout_height="80dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/github_logo" />

        <TextView
            android:id="@+id/gitUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="https://github.com/WyrnCael/JotDownThatMovie"
            android:layout_gravity="top|center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>